@{
}

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter title">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" class="form-control" placeholder="Enter Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExerciseCategory">ExerciseCategory</label>
        <select asp-for="ExerciseCategory" asp-items="@Html.GetEnumSelectList<ExerciseCategory>()">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="ExerciseCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Details.Title">Street</label>
        <input asp-for="Details.Title" class="form-control" placeholder="Enter Title">
        <span asp-validation-for="Details.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Details.Description">City</label>
        <input asp-for="Details.Description" class="form-control" placeholder="Enter Description">
        <span asp-validation-for="Details.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Details.URL">State</label>
        <input asp-for="Details.URL" class="form-control" placeholder="Enter URL">
        <span asp-validation-for="Details.URL" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>